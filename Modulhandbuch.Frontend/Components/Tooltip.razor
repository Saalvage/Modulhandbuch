<div class="tooltip-wrapper">
    <span>@Text</span>
    @ChildContent
</div>

@code {
    // Graciously stolen from https://chrissainty.com/building-a-simple-tooltip-component-for-blazor-in-under-10-lines-of-code/

    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
}
